@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Tools>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

    <h1>@Model.Header</h1>
    <p>@Model.Excerpt</p>
    <p>@Model.Content</p>

@foreach(var tool in Model.Children<Tool>())
{
    <a href="@tool.Url">
        <div>
            <h1>@tool.Header</h1>
            <p>@tool.Excerpt</p>
        </div>
    </a>
    
    
}